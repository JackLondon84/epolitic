<%= form_for [@polititian, @job], :html => {:class => "form-horizontal", :role =>"form"} do |f| %>

	<div class="form-group">
	  <%= f.label :position, "Position", class: "control-label col-sm-3" %>
	  <div class="col-sm-9", >
		  <%= f.text_field :position, class: "form-control",placeholder: "Position" %>
	  </div>
	</div>

	<div class="form-group">
	  <%= f.label :employer, "Employer", class: "control-label col-sm-3" %>
	  <div class="col-sm-9", >
		  <%= f.text_field :employer, class: "form-control",placeholder: "Employer" %>
	  </div>
	</div>	

	<div class="form-group">
	  <%= f.label :description, "Description", class: "control-label col-sm-3" %>
	  <div class="col-sm-9", >
		  <%= f.text_field :description, class: "form-control",placeholder: "Description" %>
	  </div>
	</div>

	<div class="form-group">
	  <%= f.label :start_at, "Dates", class: "control-label col-sm-3" %>
	  <div class="col-sm-9 form-inline">
			  <%= f.date_select :start_at,
			  {:discard_day => "true",:discard_month => "true", :order => [:day, :month, :year]},
			  {:class => "form-control col-sm-6"} %>
	  <div class="col-sm-9 form-inline">
			  <%= f.date_select :end_at,
			  {:discard_day => "true", :discard_month => "true",:order => [:day, :month, :year]},
			  {:class => "form-control col-sm-6"} %>
	  </div>

	  </div>
	</div>

	<div class="form-group">

	</div>

	<div class="form-group">
		<div class="col-sm-offset-3 col-sm-10">
	  		<%= f.submit class: "btn btn-primary" %>
	  		<%= link_to "Cancel", polititian_path(@polititian.id) %>
		</div> 
	</div>	

<% end %>

