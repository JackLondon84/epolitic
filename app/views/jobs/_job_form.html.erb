<%= form_for [@polititian, @job], :html => {:class => "form-horizontal", :role =>"form"} do |f| %>

	<div class="form-group">
	  <%= f.label :position, "Puesto (*)", class: "control-label col-sm-3" %>
	  <div class="col-sm-9", >
		  <%= f.text_field :position, class: "form-control",placeholder: "Puesto" %>
	  </div>
	</div>

	<div class="form-group">
	  <%= f.label :employer, "Organización", class: "control-label col-sm-3" %>
	  <div class="col-sm-9", >
		  <%= f.text_field :employer, class: "form-control",placeholder: "Organización" %>
		  <p> <%= f.check_box :political_employer %> ¿Es un puesto político?</p>
	  </div>
	</div>	
	  		 	 
	
	<div class="form-group">
	  <%= f.label :start_at, "Años (desde - a)", class: "control-label col-sm-3" %>
	  <div class="col-sm-2 form-inline">
			  <%= f.date_select :start_at,
			  {:include_blank => "true", :discard_day => "true",:discard_month => "true", :start_year => 1960, :end_year => Date.today.year},
			  {:class => "form-control col-sm-6"} %>
	  </div>
	  <div class="col-sm-2 form-inline hide-if-checked">
			  <%= f.date_select :end_at,
			  {:include_blank => "true", :discard_day => "true", :discard_month => "true", :start_year => 1960, :end_year => Date.today.year},
			  {:class => "form-control col-sm-6"} %>			  
	  </div>	  
	  <p><%= f.check_box :currently_work_here, {:class => "pChk"} %> Trabajando aquí en la actualidad</p>
	</div>
</br>

	<div class="form-group">
	  <%= f.label :salary, "Sueldo anual", class: "control-label col-sm-3" %>
	  <div class="col-sm-9", >
		  <%= f.text_field :salary, class: "form-control", placeholder: "Sueldo anual" %>
	  </div>
	</div>

	<div class="form-group">
	  <%= f.label :description, "Descripción", class: "control-label col-sm-3" %>
	  <div class="col-sm-9", >
		  <%= f.text_area :description, class: "form-control", placeholder: "Descripción" %>
	  </div>
	</div>


	<div class="form-group">
		<div class="col-sm-offset-3 col-sm-10">
	  		<%= f.submit class: "btn btn-primary" %>
	  		<%= link_to "Cancelar", polititian_path(@polititian.id) %>
		</div> 
	</div>	

<% end %>

