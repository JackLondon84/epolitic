<div class="row">

	<div class="col-md-6 col-md-offset-3">

		<% if @job.errors.any? %>
			<div class="alert alert-danger">
				<ul>
					<% @job.errors.full_messages.each do |error| %>
						<li><%= error %></li>
					<%end%>			
				</ul>
			</div>
		<%end%>

		<div class="box">
			<h1>Editar empleo</h1>
			<%= render 'job_form' %>
		</div>
	</div>
</div>	