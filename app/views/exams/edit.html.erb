<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<% if @exam.errors.any? %>
			<div class="alert alert-danger">
				<ul>
					<% @exam.errors.full_messages.each do |error| %>
						<li><%= error %></li>
					<%end%>			
				</ul>
			</div>
		<%end%>
		<div class="box">
			<h1  class = "bottom-separation">Edit exam</h1>
			<%= render 'exam_form' %>
		</div>
	</div>
</div>	