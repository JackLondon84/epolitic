<%= form_for [@polititian, @affiliation], :html => {:multipart => true, :class => "form", :role =>"form"} do |f| %>

	<div class="form-group">
	  <%= f.label :group_id, "Group_id(*)", class: "control-label col-sm-3" %>
	  <div class="col-sm-9", >
	  <%= f.select :group_id, options_from_collection_for_select(@groups, "id", "name") %>

	  </div>
	</div>	

	<div class="form-group">
		<div class="col-sm-offset-3 col-sm-10">
	  		<%= f.submit class: "btn btn-default" %>
		</div> 
	</div>	

<% end %>