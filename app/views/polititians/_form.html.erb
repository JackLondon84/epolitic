<%= form_for (@polititian), :html => {:class => "form-horizontal", :role =>"form"} do |f| %>

	<div class="form-group">
	  <%= f.label :first_name, "Nombre", class: "control-label col-sm-3" %>
	  <div class="col-sm-9", >
		  <%= f.text_field :first_name, class: "form-control",placeholder: "Nombre" %>
	  </div>
	</div>	

	<div class="form-group">
	  <%= f.label :last_name, "Apellidos", class: "control-label col-sm-3" %>
	  <div class="col-sm-9", >
		  <%= f.text_field :last_name, class: "form-control",placeholder: "Apellidos" %>
	  </div>
	</div>

	<div class="form-group">
	  <%= f.label :political_position, "Puesto político", class: "control-label col-sm-3" %>
	  <div class="col-sm-9", >
		  <%= f.text_field :political_position, class: "form-control",placeholder: "Puesto político" %>
	  </div>
	</div>

	<div class="form-group">
	  <%= f.label :start_at, "Years from - to", class: "control-label col-sm-3" %>
	  <div class="col-sm-9 form-inline">
			  <%= f.date_select :political_position_start_at,
			  {:include_blank => "true", :discard_day => "true",:discard_month => "true", :start_year => 1960, :end_year => Date.today.year},
			  {:class => "form-control col-sm-6"} %>
	  <div class="col-sm-9 form-inline">
			  <%= f.date_select :political_position_end_at,
			  {:include_blank => "true", :discard_day => "true", :discard_month => "true", :start_year => 1960, :end_year => Date.today.year},
			  {:class => "form-control col-sm-6"} %>
	  </div>

	  </div>
	</div>

	<div class="form-group">

	</div>

	<div class="form-group">
		<div class="col-sm-offset-3 col-sm-10">
	  		<%= f.submit class: "btn btn-default" %>
		</div> 
	</div>	
<% end %>