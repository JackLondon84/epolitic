<%= form_for (@polititian), :html => {:multipart => true, :class => "form-horizontal", :role =>"form"} do |f| %>
	<div class="form-group">
	  <%= f.label :first_name, "Nombre(*)", class: "control-label col-sm-4" %>
	  <div class="col-sm-8", >
		  <%= f.text_field :first_name, class: "form-control", placeholder: "Nombre" %>
	  </div>
	</div>	
	<div class="form-group">
	  <%= f.label :last_name, "Apellidos(*)", class: "control-label col-sm-4" %>
	  <div class="col-sm-8", >
		  <%= f.text_field :last_name, class: "form-control", placeholder: "Apellidos" %>
	  </div>
	</div>
	<div class="form-group">
	  <%= f.label :group_id, "Partido político(*)", class: "control-label col-sm-4" %>
	  <div class="col-sm-8", >
		<%= f.collection_select :group_id, Group.all, :id, :name, {include_blank: "Selecciona partido político"}, { :class => 'form-control' } %>
	  </div>
	</div>
	<div class="form-group">
	  <%= f.label :avatar, "Foto", class: "control-label col-sm-4" %>
	  <div class="col-sm-8", >
		  <%= f.file_field :avatar, class: "form-control" %>
	  </div>
	</div>
	<div class="form-group">
	  <%= f.label :facebook, "Perfil Facebook", class: "control-label col-sm-4" %>
	  <div class="col-sm-8", >
		  <%= f.text_field :facebook, class: "form-control", placeholder: "Perfil Facebook" %>
	  </div>
	</div>	
	<div class="form-group">
	  <%= f.label :twitter, "Perfil Twitter", class: "control-label col-sm-4" %>
	  <div class="col-sm-8", >
		  <%= f.text_field :twitter, class: "form-control", placeholder: "Perfil Twitter" %>
	  </div>
	</div>	
	<div class="form-group">
	  <%= f.label :other, "Otros datos de interés", class: "control-label col-sm-4" %>
	  <div class="col-sm-8", >
		  <%= f.text_area :other, class: "form-control", placeholder: "Añadir otros datos de interés separados por comas" %>
	  </div>
	</div>
	<div class="form-group">
	  <%= f.label :sources, "Fuentes", class: "control-label col-sm-4" %>
	  <div class="col-sm-8", >
		  <%= f.text_area :sources, class: "form-control", placeholder: "Añadir fuentes aquí separadas por comas" %>
	  </div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-4 col-sm-8">
	  		<%= f.submit class: "btn btn-primary"%>
		</div> 
	</div>	
<% end %>