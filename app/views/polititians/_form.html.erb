<%= form_for (@polititian), :html => {:multipart => true, :class => "form-horizontal", :role =>"form"} do |f| %>

	<div class="form-group">
	  <%= f.label :first_name, "First name(*)", class: "control-label col-sm-4" %>
	  <div class="col-sm-8", >
		  <%= f.text_field :first_name, class: "form-control", placeholder: "First name" %>
	  </div>
	</div>	

	<div class="form-group">
	  <%= f.label :last_name, "Last name(*)", class: "control-label col-sm-4" %>
	  <div class="col-sm-8", >
		  <%= f.text_field :last_name, class: "form-control", placeholder: "Last name" %>
	  </div>
	</div>

	<div class="form-group">
	  <%= f.label :group_id, "Partido polÃ­tico(*)", class: "control-label col-sm-4" %>
