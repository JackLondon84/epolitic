<div class="box">
	<div class="row">		
		<div class="col-md-3" >
			 <div class="thumbnail">
			 	<%= image_tag @polititian.avatar %>
			 </div>		
		</div>
		<div class="col-md-9">
			<div class="row">
				<div class="col-md-8">
					<h1 class="">
						<%= @polititian.full_name %>
						<%= if @polititian.facebook.present? then link_to (image_tag src="fb-icon.gif"), "http://#{@polititian.facebook}" end %>
						<%= if @polititian.twitter.present? then link_to (image_tag src="tw-icon.gif"), "http://#{@polititian.twitter}"  end %>							
					</h1>	
				</div>	
				<div class="col-md-4">
				  	<span class="dropdown pull-right">
			          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Acciones <b class="caret"></b></a>
			          <ul class="dropdown-menu">
					    <li><%= edit_link(edit_polititian_path(@polititian)) %></li>
						<li><%= delete_link(polititian_path(@polititian))%></li>
			          </ul>
			       </span>
				</div>	
			</div>
			<%= render 'profile_summary_content' %>
		</div>
	</div>
</div>