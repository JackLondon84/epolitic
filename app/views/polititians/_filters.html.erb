<%= form_tag polititians_path, method: :get, :class => "", :role => "form" do %>

	<div class="form-group">
  <%= text_field_tag :term, params[:term], class: "form-control input-lg", placeholder: "Filtrar por nombre" %>
	</div>
		<div class="form-group">
			<%= collection_select :group_id_input, :group_id, Group.all, :id, :name, {prompt: "Filtrar por partido político"}, { :class => 'form-control' } %>
		</div>
		<div class="form-group">
			<%= collection_select :institution_id_input, :institution_id, Institution.all, :id, :name, {prompt: "Filtrar por institución"}, { :class => 'form-control' } %>
		</div>
  <%= submit_tag "Filtrar", name: nil, class: "btn btn-primary btn-lg" %>
<% end %>