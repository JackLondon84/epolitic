
<div class="row">
	<div class="col-md-8">

<!-- BASIC PROFILE INFO -->
		<div class="row box">
			<div class="col-md-3" >
				 <div class="thumbnail">
				 	<%= image_tag("carlos_fabra.jpg", :alt => "" )%>
				 </div>
			</div>
			<div class="col-md-7">
				<h1><%= @polititian.first_name %> <%= @polititian.last_name %></h1>
				<h3><%= @polititian.political_position %></h3>
				<p>	
					<%= if @polititian.political_position_start_at? then @polititian.political_position_start_at.strftime("%Y") end %>
					<%= if @polititian.political_position_end_at? then " - " end %>

					<%= if @polititian.political_position_end_at? then @polititian.political_position_end_at.strftime("%Y") end %>
				</p>
			</div>
			<div class="col-md-2">
				<%= link_to '<span class="glyphicon glyphicon-pencil"></span>  Editar'.html_safe, edit_polititian_path(@polititian), :class => "btn btn-primary btn-lg" %>
			</div>
		</div>


		<!-- CORRUPTION -->

			<div class="alert alert-danger">
				<div class="row">
					<div class="col-md-1 text-right">
						<h3><span class="glyphicon glyphicon-eye-open"></span></h3>
					</div>
					<div class="col-md-9">				
						<h3>Judicial history</h3>
						<h4><%= @polititian.corruption_title %></h4>			
						<p><%= @polititian.corruption_description %></p>
					</div>	
					<div class="col-md-2 polititian-icons text-center">
						<div class="bad">
							<span class="glyphicon glyphicon-warning-sign"></span>
						</div>
					</div>
				</div>
			</div>

<!-- DETAILED PROFILE INFO SECTIONS -->

		<div class="row box">

	<!-- EDUCATION -->		
			<div class="bottom-separation">			
				<div class="row ">
					<div class="col-md-1 text-right">
						<h4><span class="glyphicon glyphicon-book"></span></h3>
					</div>
					<div class="col-md-9">
						<h4 class="">Higher education</h4>
					</div>
					<div class="col-md-2 polititian-icons text-center">
						<div class="bad">
							<span class="glyphicon glyphicon-warning-sign"></span>
						</div>
					</div>
				</div>	

				<div class="row">
					<div class="col-md-offset-1 col-md-9">
						<h4><small><%= if @polititian.educations.count == 0 then "No higher education."end %></small></h4>
						<ul class = "list-unstyled">
							<% @educations.each do |education| %>
							    <li class="top-separation">
							    	<div class="row">
							    		<div  class="col-md-9">
										    <h4>
										    	<strong>
										    		<%= education.degree%>
										    	</strong>
										    	<small>
										    		<%= if education.start_at? then education.start_at.strftime("%Y") end%> 
										    		<%= if (education.end_at? && education.start_at?) then "-" end %> 
										    		<%= if education.end_at? then education.end_at.strftime("%Y") end%>
										    	</small>
										    </h4>
										</div>
										<div class="col-md-3 text-center">    
										    <h4><small>
										    <%= link_to "Edit", edit_polititian_education_path(@polititian.id, education.id) %>
										    <%= link_to "Delete", polititian_education_path(@polititian.id, education.id), method: :delete, confirm: "Are you sure?" %>
											</small></h4>
										</div>    
								    </div>
									<p>education.center<p>
								    <%= if !education.description.nil? then education.description end %>
								</li>   
							<% end %>
							<li><button class="btn btn-primary" data-toggle="modal" data-target="#myModal-education"><span class="glyphicon glyphicon-plus"></span> Add education</button></li>
						</ul>
					</div>
				</div>
			</div>

	<!-- JOBS -->		
			<div class="">
				<div class="row">			
					<div class="col-md-1 text-right">
						<h4><span class="glyphicon glyphicon-wrench"></span></h4>
					</div>
					<div class="col-md-9">
						<h4 class="">Professional experience outside politics</h4>

					</div>
					<div class="col-md-2 polititian-icons text-center">
						<div class="bad">
							<span class="glyphicon glyphicon-warning-sign"></span>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="col-md-offset-1 col-md-9">
						<h4><small><%= if @polititian.jobs.count == 0 then "No professional experience outside politics."end %></small></h4>
						<ul class = "list-unstyled">
							<% @jobs.each do |job| %>
							    <li class="top-separation">
							    	<div class="row">
							    		<div  class="col-md-9">
										    <h4><%= job.position%>
										    	<small>
										    		<%= if job.start_at? then job.start_at.strftime("%Y") end%> 
										    		<%= if (job.end_at? && job.start_at?) then "-" end %> 
										    		<%= if job.end_at? then job.end_at.strftime("%Y") end%>
										    	</small>
										    </h4>
										</div>
										<div class="col-md-3 text-right">    
										    <h4><small>
										    <%= link_to "Edit", edit_polititian_job_path(@polititian.id, job.id) %>
										    <%= link_to "Delete", polititian_job_path(@polititian.id, job.id), method: :delete, confirm: "Are you sure?" %>
											</small></h4>
										</div>    
								    </div>
									<p><%=job.employer %><p>
								    <%= if !job.description.nil? then job.description end %>
								</li>   
							<% end %>
							<li><button class="btn btn-primary" data-toggle="modal" data-target="#myModal-job"><span class="glyphicon glyphicon-plus"></span> Add job or public exam</button></li>
						</ul>	
					</div>
				</div>

			</div>
			


		</div>
	</div>

<!-- RIGHT COLUMN SECTION -->
	<div class="col-md-4">
	</div>

<!-- MODALS -->

	<!-- Modal Educations-->
	<div class="modal fade" id="myModal-education" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h4 class="modal-title" id="myModalLabel">Add job</h4>
	      </div>
	      <div class="modal-body">
			<%= render 'educations/education_form' %>
	      </div>
	      <div class="modal-footer">
<!-- 	  		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
	  	  </div>	
	    </div>
	  </div>
	</div>

	<!-- Modal Jobs-->
	<div class="modal fade" id="myModal-job" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h4 class="modal-title" id="myModalLabel">Add job</h4>
	      </div>
	      <div class="modal-body">
			<%= render 'jobs/job_form' %>
	      </div>
	      <div class="modal-footer">
<!-- 	  		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
	  	  </div>	
	    </div>
	  </div>
	</div>


</div>