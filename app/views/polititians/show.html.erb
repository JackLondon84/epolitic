
<div class="row">
	<div class="col-md-9">

<!-- BASIC PROFILE INFO -->
		<div class="row box">
			<div class="col-md-3" >
				 <div class="thumbnail">
				 	<%= image_tag("carlos_fabra.jpg", :alt => "" )%>
				 </div>
			</div>
			<div class="col-md-7">
				<h1><%= @polititian.first_name %> <%= @polititian.last_name %></h1>
				<h3><%= @polititian.political_position %></h3>
				<p>	
					<%= if @polititian.political_position_start_at? then @polititian.political_position_start_at.strftime("%B %Y") end %>
					<%= if @polititian.political_position_end_at? then " - " end %>

					<%= if @polititian.political_position_end_at? then @polititian.political_position_end_at.strftime("%B %Y") end %>
				</p>
			</div>
			<div class="col-md-2">
				<%= link_to '<span class="glyphicon glyphicon-pencil"></span>  Editar'.html_safe, edit_polititian_path(@polititian), :class => "btn btn-primary btn-lg" %>
			</div>
		</div>

<!-- DETAILED PROFILE INFO SECTIONS -->
		<div class="row box">

	<!-- CORRUPTION -->		
			<div class="row bottom-separation">	
				<div class="col-md-1 text-right">
					<h3><span class="glyphicon glyphicon-warning-sign"></span></h3>
				</div>
				<div class="col-md-9">
					<h3>Corrupción</h3>
			        <p>Imputado por corrupción</p>
				</div>
				<div class="col-md-2 polititian-icons text-center">
					<div class="bad">
						<span class="glyphicon glyphicon-warning-sign"></span>
					</div>
				</div>
			</div>

	<!-- EDUCATION -->		
			<div class="row bottom-separation">	
				<div class="col-md-1 text-right">
					<h3><span class="glyphicon glyphicon-book"></span></h3>
				</div>
				<div class="col-md-9">
					<h3>Titulación universitaria</h3>
			        <p>No tiene titulación titulación universitaria.</p>
				</div>
				<div class="col-md-2 polititian-icons text-center">
					<div class="good">
						<span class="glyphicon glyphicon-ok"></span>
					</div>
				</div>
			</div>

	<!-- JOBS -->		
			<div class="row bottom-separation">			
				<div class="col-md-1 text-right">
					<h3><span class="glyphicon glyphicon-euro"></span></h3>
				</div>
				<div class="col-md-9">
					<h3>
						Carrera profesional						
					</h3>

					<ul class = "no-bullets-list">
						<% @jobs.each do |job| %>
						    <li class="bottom-separation">
							    <h4><%= job.position%></h4>
							    <p><%= job.position%></p>
							    <%= if !job.description.nil? then job.description end %>
							    <p><%= job.start_at %> - <%= job.end_at %></p>

							    <%= link_to "Edit", edit_polititian_job_path(@polititian.id, job.id) %>

							    <%= link_to "Delete", polititian_job_path(@polititian.id, job.id), method: :delete, confirm: "Are you sure?" %>		  		
							</li>   
						<% end %>
					</ul>	

					<button class="btn btn-primary" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-plus"></span> Add</button>

				</div>
				<div class="col-md-2 polititian-icons text-center">
					<div class="bad">
						<span class="glyphicon glyphicon-warning-sign"></span>
					</div>
				</div>
			</div>

	<!-- ENGLISH -->		
			<div class="row">			
				<div class="col-md-1 text-right">
					<h3><span class="glyphicon glyphicon-globe"></span></h3>
				</div>
				<div class="col-md-9">
					<h3>Inglés</h3>
			        <p>No habla inglés.</p>
				</div>
				<div class="col-md-2 polititian-icons text-center">
					<div class="good">
						<span class="glyphicon glyphicon-ok"></span>
					</div>
				</div>
			</div>
		</div>

	</div>

<!-- RIGHT COLUMN SECTION -->
	<div class="col-md-3">
	</div>

<!-- MODALS -->
	<!-- Modal Jobs-->
	<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	        <h4 class="modal-title" id="myModalLabel">Hola</h4>
	      </div>
	      <div class="modal-body">
			<%= render 'jobs/job_form' %>
	      </div>
	      <div class="modal-footer">
<!-- 	  		<button type="button" class="btn btn-default" data-dismiss="modal">Close</button> -->
	  	  </div>	
	    </div>
	  </div>
	</div>


</div>