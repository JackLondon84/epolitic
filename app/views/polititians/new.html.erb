<div class="row">
	<div class="col-md-6 col-md-offset-3">

		<div class="box">
			<h1>Añadir político</h1>

			<%= form_for (@polititian), :html => {:class => "form-horizontal", :role =>"form"} do |f| %>

				<div class="form-group">
				  <%= f.label :first_name, "Nombre", class: "control-label col-sm-3" %>
				  <div class="col-sm-9", >
					  <%= f.text_field :first_name, class: "form-control",placeholder: "Nombre" %>
				  </div>
				</div>	

				<div class="form-group">
				  <%= f.label :last_name, "Apellidos", class: "control-label col-sm-3" %>
				  <div class="col-sm-9", >
					  <%= f.text_field :last_name, class: "form-control",placeholder: "Apellidos" %>
				  </div>
				</div>


				  <div class="form-group">
				    <div class="col-sm-offset-3 col-sm-10">
					  <%= f.submit class: "btn btn-default" %>
					</div> 
				  </div>	 

			<% end %>

		</div>
	</div>
</div>

