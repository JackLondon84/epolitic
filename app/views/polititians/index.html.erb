<h1 class="bottom-separation">Polititians</h1>

<div class="row">
	<div class="col-md-3">
		<%= link_to '<span class="glyphicon glyphicon-plus"></span> Add a polititian'.html_safe, new_polititian_path, :class => "btn btn-primary btn-lg" %>
	</div>
	<div class="col-md-9">
		<ul class="list-group">		
			<% @polititians.each do |polititian| %>
				<li class="list-group-item">				 
					<div class="row">
					  <div class="col-md-2">
					  	<div class= "thumbnail">
					  		<%= image_tag polititian.avatar %>
					    </div>
					  </div>
					  <div class="col-md-1">
						  	<div class= "thumbnail">
		 						<%= image_tag polititian.group.avatar %>
						    </div>
					  </div>
					  <div class="col-md-7">
					  	<h4>
					  		<%=link_to "#{polititian.first_name} #{polititian.last_name}", polititian_path(polititian)%>
					  	</h4>					  	
					  	<h5> <%= if polititian.groups.count != 0 then polititian.groups.first.name end %> </h5>
					  	<h5>
					  		<%= polititian.political_position %>
					  	</h5>
						<p>	
							<%= if polititian.political_position_start_at? then polititian.political_position_start_at.strftime("%Y") end %>
							<%= if polititian.political_position_end_at? then " - " end %>

							<%= if polititian.political_position_end_at? then polititian.political_position_end_at.strftime("%Y") end %>
						</p>
						<p>
						  	<%if polititian.educations.count == 0 %>
							  	<span class="label label-danger"><span class="glyphicon glyphicon-book"></span> No higher education</span>
								<%else%>
							  	<span class="label label-success"><span class="glyphicon glyphicon-book"></span> Has higher education</span>
							<%end%>
						  	<%if polititian.jobs.count == 0 %>
							  	<span class="label label-danger"><span class="glyphicon glyphicon-euro"></span> No previous professional career</span>
								<%else%>
							  	<span class="label label-success"><span class="glyphicon glyphicon-euro"></span> Has previous professional career</span>
							<%end%>
							<%if polititian.trials.count != 0 %>
								<h3 class="alert alert-danger"> <span class="glyphicon glyphicon-warning-sign"> On Trial </h3>
							<%end%>	
						</p>  
					  </div>
					  <div class="col-md-2">
						  <h4><small><%= link_to("Delete", polititian_path(polititian), method: :delete, confirm: 'Are you sure?')%></small></h4>
					  </div>
					</div>
				</li>
			<%end%>
		</ul>
	</div>
</div>


