<div class="row text-center">
  <div class="col-sm-3"></div>
  <div class="col-sm-6 box text-left">

    <h2 class="bottom-separation">Editar cuenta <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <% if devise_error_messages!.present? %>
        <div class="alert alert-danger">
          <%= devise_error_messages! %>
        </div>
      <% end %>

      <div class="form-group">
        <div><%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control" %></div>

      <div class="form-group">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Esperando confirmación para: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>

      <div class="form-group">
        <div><%= f.label :password, "Contraseña" %> <i>(dejar en blanco si no quieres cambiar contraseña)</i><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>
      </div>


      <div class="form-group">
        <div><%= f.label :password_confirmation, "Confirmación de contraseña" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>
      </div>


      <div class="form-group">
        <div><%= f.label :current_password, "Contraseña actual" %> <i>(Contraseña actual para confirmar los cambios)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %></div>
      </div>

        <div><%= f.submit "Actualizar datos", class: "btn btn-primary" %></div>
    <% end %>

    </br>
    </br>
    <h3 class="bottom-separation">Borrar mi cuenta</h3>

    <p>¿Prefieres no tener cuenta en ePolitic.org? <%= button_to "Borrar cuenta", registration_path(resource_name), data: { confirm: "¿Estás segur@?" }, method: :delete, class: "btn btn-danger" %></p>

    </br>
    <%= link_to "Atrás", :back %>

  </div>  
</div>

