<div class="row text-center">
	<div class="col-sm-3"></div>
	<div class="col-sm-6 box text-left">

		<h2 class="bottom-separation">Cambiar contrase単a</h2>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
		  <%= devise_error_messages! %>
		  <%= f.hidden_field :reset_password_token %>

			<div class="form-group">
			  <div><%= f.label :password, "Nueva contrase単a" %><br />
			    <%= f.password_field :password, autofocus: true, autocomplete: "off" %></div>
			</div>

			<div class="form-group">
			  <div><%= f.label :password_confirmation, "Confirmar nueva contrase単a" %><br />
			    <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
			</div>

			<div class="form-group">
			  <div><%= f.submit "Cambiar contrase単a", class: "btn btn-primary" %> %></div>
		<% end %>
		</div>
		</br>
		<%= render "devise/shared/links" %>

	</div>	
</div>
