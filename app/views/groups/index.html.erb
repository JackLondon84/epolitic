<h1 class="bottom-separation">
	Partidos políticos 
	<%= add_button("Añadir partido político", new_group_path, 'btn btn-primary btn-lg pull-right') %>
</h1>

<div class="row">

	<!-- FILTERS -->
	<div class="col-md-3">
		<%= render 'filters' %>
	</div>

	<!-- POLITITIANS MINI-PROFILES -->
	<div class="col-md-9">
		<ul class="list-group">		
			<% @groups.each do |group| %>

				<li class="list-group-item">				 
					<div class="row">
					  <div class="col-md-2">
					  	<div class= "thumbnail">
					  		<%= image_tag group.avatar %>
					    </div>
					  </div>
					  <div class="col-md-8 inline-block">
					  	<h4>
							<%=group.name %>
					  		<small> &nbsp;
					  			<%=link_to "#{calculate_group_count(group)} políticos", polititians_path(:group_id => group.id) %>  en ePolitic.org

					  		</small>
					  	</h4>
					  </br>
					  	<div class = "row">
					  		<div class ="col-md-5 text-right">
					  			<p>Con titulación <span class="glyphicon glyphicon-book"></p>
					  		</div>
					  		<div class ="col-md-5">
								<div class="progress">
								  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%=calculate_group_education(group)%> %;">
								    <span class="sr-only">60% Complete</span>
								  </div>
								</div>								
							</div>
							<div class="col-md-2">
								<p><%=calculate_group_education(group).round(0)%> %</p>
							</div>

						</div>	

					  	<div class = "row">
					  		<div class ="col-md-5 text-right">
					  			<p>Con carrera profesional <span class="glyphicon glyphicon-euro"></p>
					  		</div>
					  		<div class ="col-md-5">
								<div class="progress">
								  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: <%=calculate_group_job(group)%>%;">
								    <span class="sr-only">60% Complete</span>
								  </div>
								</div>
							</div>
							<div class="col-md-2">
								<p><%=calculate_group_job(group).round(0)%> %</p>
							</div>
						</div>


					  </div>
					  <div class="col-md-2">
						  <h4 class="bottom-align"><small> 
						  	<span class="dropdown pull-right">
					          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Acciones <b class="caret"></b></a>
					          <ul class="dropdown-menu">
					          	<li><%= edit_link(edit_group_path(group)) %></li>
							  	<li><%= delete_link(group_path(group))%></li>
					          </ul>
					        </span>
						  </small></h4>
					  </div>
					</div>
				</li>

			<%end%>
		</ul>
	</div>
</div>